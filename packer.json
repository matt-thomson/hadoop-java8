{
    "builders": [
        {
            "type": "docker",
            "image": "mattthomson/hadoop-java8:0.1",
            "commit": true
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "apt-get update",
                "apt-get -y install curl sudo"
            ]
        },
        {
            "type": "chef-solo",
            "cookbook_paths": [
                "cookbooks"
            ],
            "run_list": [
                "hadoop-java8::default",
                "hadoop-java8::reset"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "mattthomson/hadoop-java8",
            "tag": "0.2"
        }
    ]
}
